{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
		"lib": ["es6", "dom"],
    "skipDefaultLibCheck": true,
    "typeRoots": [ "node_modules/@types" ],
    "types": [ "crossroads", "history", "knockout", "react-router", "requirejs", "signals", "whatwg-fetch" ]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
      "node_modules"
  ]
}
