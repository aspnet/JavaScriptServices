{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "lib": ["es6", "dom"],
    "types": [
      "body-parser",
      "compression",
      "cookie-parser",
      "express",
      "express-serve-static-core",
      "mime",
      "node",
      "serve-static",
      "hammerjs"
    ]
  },
  "exclude": [
      "bin",
      "node_modules"
  ],
  "atom": { "rewriteTsconfig": false }
}
